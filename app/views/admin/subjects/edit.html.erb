<% provide :title, t("subject.edit") %>
<h1><%= t "subject.edit" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @subject] do |f| %>
      <%= render "shared/error_messages", object: @subject %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>

      <%= f.label :duration %>
      <%= f.text_field :duration, class: "form-control" %>

      <%= f.submit t("edit.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
