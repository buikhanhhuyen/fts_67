<%= form_for [:admin, @subject] do |f| %>
  <%= render "shared/error_messages", object: @subject %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit t("subject.submit"), class: "btn btn-primary" %>
<% end %>
