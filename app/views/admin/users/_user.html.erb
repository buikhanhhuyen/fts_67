<li>
  <%= gravatar_for user, size: Settings.size %>
  <%= link_to user.name, user %>
  <% if current_user.is_admin? && !current_user.current_user?(user) %>
    <%= link_to t("delete.content"), [:admin, user], method: :delete,
      data: {confirm: t("delete.confirm")}, class: "btn btn-danger" %>
  <% end %>
</li>
