<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.logo"), root_path, id: "logo" %>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("home.home"), "#" %></li>
      <li><%= link_to t("signup.content"), signup_path %></li>
      <% if logged_in? %>
        <li><%= link_to t("user.user"), users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "login.account" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("home.profile"), current_user %></li>
            <li><%= link_to t("logout.content"), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("login.content"), login_path %></li>
      <% end %>
    </ul>
  </div>
</header>
